
@model DiscountCalculator.Models.LoginModel
@using (Html.BeginForm("Login", "Discount", FormMethod.Post))
{
    <div class="text-center">
        <h1>Discount Calculator</h1>
    </div>
    @if (@ViewBag.InValidLogin)
    {
        <label class="text-danger">Invalid Login</label>
    }
    <div class="text-left">
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control col-md-5", @id = "userName", autocomplete = "off", placeholder = "User Name" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger", @id = "userVal" })
                </div>
                <div class="form-group">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control col-md-5", @id = "pass", autocomplete = "off", placeholder = "Password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <input type="submit" value="Login" id="loginClick" class="btn-success" />
            </div>
        </div>
    </div>
}

