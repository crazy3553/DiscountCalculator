
@model DiscountCalculator.Models.DiscountModel
@using (Html.BeginForm("DisCalculator", "Discount", FormMethod.Post))
{
    <div class="text-left">
        <div class="card">
            <div class="card-body">
                <form>
                    <div class="form-group">
                        @Html.EditorFor(model => model.GoldPrice, new { htmlAttributes = new { @class = "form-control col-md-5", @id = "goldPrice", autocomplete = "off", placeholder = "Gold Price" } })
                        @Html.ValidationMessageFor(model => model.GoldPrice, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control col-md-5", @id = "weight", autocomplete = "off", placeholder = "Weight" } })
                        @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control col-md-5", @id = "discount", autocomplete = "off", placeholder = "Discount" } })
                        @Html.ValidationMessageFor(model => model.Discount, "", new { @class = "text-danger" })
                    </div>
                    <input type="submit" value="Calculate" id="calculate" class="btn-success" />
                </form>
            </div>
        </div>
    </div>
}

